<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="CryptoPortfolioTracker.Dialogs.DashboardSettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CryptoPortfolioTracker.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:l="using:WinUI3Localizer"
    xmlns:converters="using:CryptoPortfolioTracker.Converters"
    xmlns:viewmodels="using:CryptoPortfolioTracker.ViewModels"
    xmlns:controls="using:CryptoPortfolioTracker.Controls"
    xmlns:ct="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:toolkit="using:AK.Toolkit.WinUI3"
    Name="Root"
    Loading="Dialog_Loading"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <!-- Overriding values -->
        <x:Double x:Key="ContentDialogMaxWidth">1200</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">1200</x:Double>
        <Style x:Key="HorizontalSwipe" TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
            <Setter Property="Height" Value="60"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </ContentDialog.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="600">
        <Grid x:Name="HeaderGrid" CornerRadius="8,8,0,0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
          Margin="0,0,5,0" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
            </Grid.ColumnDefinitions>

            <TextBlock l:Uids.Uid="DashboardSettings_Title" Text="Dashboard Settings" Grid.Row="0" x:Name="txtSettings" Margin="8,0,0,10" Foreground="DarkGoldenrod" Style="{StaticResource SampleHeaderTextStyle}" />
            <Border Grid.Row="1" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0">
                <ScrollViewer HorizontalAlignment="Stretch" Margin="0" Padding="0" toolkit:ScrollBarExtensions.KeepVerticalExpanded="{Binding IsScrollBarsExpanded}">
                    <StackPanel Spacing="4">

                        <ct:SettingsExpander l:Uids.Uid="settingsExpander_Bubbles" x:Name="settingsExpander_Bubbles"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            HeaderIcon="{ui:FontIcon Glyph=&#xEC26;}"
                            IsEnabled="{x:Bind IsCardEnabled, Mode=OneWay}"
                            IsExpanded="{x:Bind IsCardExpanded, Mode=OneWay}">
                            <ct:SettingsExpander.Items>
                                
                                <ct:SettingsCard l:Uids.Uid="Settings_Bubbles1" x:Name="SettingsPL1"
                                HeaderIcon="{ui:FontIcon Glyph=&#xE7C1;}"
                                IsEnabled="True">
                                    <StackPanel Orientation="Horizontal">
                                        <NumberBox x:Name="NbPerc" Value="{Binding WithinRangePerc, Mode=TwoWay}" Maximum="99" Minimum="{Binding CloseToPerc}" Margin="30,0,5,0" />
                                        <TextBlock Text="%" VerticalAlignment="Center" />
                                    </StackPanel>
                                </ct:SettingsCard>

                                <!--<ct:SettingsCard l:Uids.Uid="Settings_Bubbles2" x:Name="SettingsPL2"
                                HeaderIcon="{ui:FontIcon Glyph=&#xE7C1;}"
                                IsEnabled="True">
                                    <StackPanel Orientation="Horizontal">
                                        <NumberBox Value="{Binding CloseToPerc, Mode=TwoWay}" Maximum="{Binding WithinRangePerc}" Minimum="1" Margin="30,0,5,0" />
                                        <TextBlock Text="%" VerticalAlignment="Center" />
                                    </StackPanel>
                                </ct:SettingsCard>-->

                                <ct:SettingsCard l:Uids.Uid="Settings_DashBoard_RsiPeriod" x:Name="SettingsRsi"
                                    HeaderIcon="{ui:FontIcon Glyph=&#xE81C;}"
                                    IsEnabled="True">
                                    <StackPanel Orientation="Horizontal">
                                        <NumberBox x:Name="NbRsiPeriod" Value="{Binding RsiPeriod, Mode=TwoWay}" Maximum="200" Minimum="9" Margin="30,0,5,0" />
                                    </StackPanel>
                                </ct:SettingsCard>

                                <ct:SettingsCard l:Uids.Uid="Settings_DashBoard_MaType" Margin="0,0,0,0"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xE8AB;}"
                                   IsEnabled="true">
                                    <ComboBox x:Name="comboBoxMA"  SelectedIndex="{Binding MaTypeIndex, Mode=TwoWay}">
                                        <ComboBoxItem Tag="SMA">SMA</ComboBoxItem>
                                        <ComboBoxItem Tag="EMA">EMA</ComboBoxItem>
                                    </ComboBox>
                                </ct:SettingsCard>

                                <ct:SettingsCard l:Uids.Uid="Settings_DashBoard_MaPeriod" x:Name="SettingsMa"
                                    HeaderIcon="{ui:FontIcon Glyph=&#xE81C;}"
                                    IsEnabled="True">
                                    <StackPanel Orientation="Horizontal">
                                        <NumberBox x:Name="NbMaPeriod" Value="{Binding MaPeriod, Mode=TwoWay}" Maximum="200" Minimum="9" Margin="30,0,5,0" />
                                    </StackPanel>
                                </ct:SettingsCard>

                            </ct:SettingsExpander.Items>
                        </ct:SettingsExpander>

                        <ct:SettingsExpander l:Uids.Uid="settingsExpander_Pie" x:Name="settingsExpander_Pie"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            HeaderIcon="{ui:FontIcon Glyph=&#xEB05;}"
                            IsEnabled="{x:Bind IsCardEnabled, Mode=OneWay}"
                            IsExpanded="{x:Bind IsCardExpanded, Mode=OneWay}">
                            <ct:SettingsExpander.Items>

                                <ct:SettingsCard l:Uids.Uid="Settings_MaxPieCoins" x:Name="SettingsDB1"
                                    HeaderIcon="{ui:FontIcon Glyph=&#xE890;}"
                                    IsEnabled="True">
                                    <StackPanel Orientation="Horizontal">
                                        <NumberBox x:Name="NbMaxCoins" Value="{Binding MaxPieCoins, Mode=TwoWay}" Maximum="50" Minimum="2" Margin="30,0,5,0" />
                                    </StackPanel>
                                </ct:SettingsCard>

                                
                            </ct:SettingsExpander.Items>
                        </ct:SettingsExpander>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</ContentDialog>
