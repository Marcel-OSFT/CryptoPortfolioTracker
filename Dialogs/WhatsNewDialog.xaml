<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="CryptoPortfolioTracker.Dialogs.WhatsNewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    PrimaryButtonText="Close"
    DefaultButton="Primary"
    Width="800"
    Height="600"
    Loaded="WhatsNewDialog_Loaded">

    <ContentDialog.Resources>
        <!-- Overriding values -->
        <x:Double x:Key="ContentDialogMaxWidth">1200</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">1200</x:Double>
    </ContentDialog.Resources>
    
    <Grid>
        <RichEditBox x:Name="RichText" Width="800" Height="600"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     />
        <!-- Overlay shown while the RTF is loading -->
        <Grid x:Name="LoadingOverlay"
              Background="#80000000"
              Visibility="Collapsed"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <ProgressRing x:Name="LoadingRing"
                  IsActive="True"
                  Width="48"
                  Height="48"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
        </Grid>
    </Grid>

</ContentDialog>
