<ContentDialog
    x:Class="CryptoPortfolioTracker.Dialogs.AccountDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="using:CryptoPortfolioTracker" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    Title="Add a new Account"
    PrimaryButtonText="Accept Account"
    IsPrimaryButtonEnabled ="False" 
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="Button_Click_AcceptAccount">

    <ContentDialog.Resources>

        <!-- Overriding ContentDialogMaxWidth value -->
        <x:Double x:Key="ContentDialogMaxWidth">800</x:Double>
    </ContentDialog.Resources>


    <Grid  Margin="0,0,0,0" Width="600">

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MaxWidth="600"/>

        </Grid.ColumnDefinitions>

        
        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" Margin="15,0,0,0" >
            <StackPanel.Background>
                <SolidColorBrush Color ="#eebc3f" Opacity="0.1"/>
            </StackPanel.Background>
            <TextBlock x:Name="txtBlock" Margin="10,10,0,5">Account Name</TextBlock>
            <TextBox x:Name="AccountNameText" PlaceholderText="ex: Bybit Funding" TextChanging="AccountName_TextChanging" Margin="10,0,10,0"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" Margin="15,0,0,0" >
            <StackPanel.Background>
                <SolidColorBrush Color ="#eebc3f" Opacity="0.1"/>
            </StackPanel.Background>
            <TextBlock x:Name="txtBlock1" Margin="10,10,0,5" >Account Description</TextBlock>
            <TextBox x:Name="DescriptionText" PlaceholderText="Description goes here...." Margin="10,0,10,0" AutomationProperties.Name="multi-line TextBox" 
                     TextWrapping="Wrap" AcceptsReturn="True" MinWidth="400" MinHeight="150">
            </TextBox>
        </StackPanel>
        



    </Grid>



</ContentDialog>
